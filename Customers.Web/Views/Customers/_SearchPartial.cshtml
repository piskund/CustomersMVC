@model Customers.Web.Models.PagedList<Customers.Web.Models.Customer>

@using (Ajax.BeginForm(
            new AjaxOptions()
            {
                HttpMethod = "get",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "customersList",
                OnSuccess = "updateTotal"
            }))
{
    @Html.Raw("Search")
    @Html.TextBoxFor(model => model.CurrentFilter, new { Value = ViewData["currentFilter"] })
    <input type="submit" value="Search" class="btn btn-default btn" />
}

