@model Customers.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row" style="height: 50px;">
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="outline: 1px solid">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div style="color: white; background-color: #2a6496; height: 30px">
                        &nbsp;Management system
                    </div>
                    <div style="padding-left: 20%">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Login)
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="padding-left: 22%">
                        <input type="submit" value="Log in" class="btn btn-default"/>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}